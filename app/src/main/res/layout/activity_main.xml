<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF7E6">

    <TextView
        android:id="@+id/headerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plant Health Detection"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:background="#5A8F49"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/headerText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo"
        android:background="@android:color/white"
        android:elevation="6dp"
        android:padding="8dp"
        android:contentDescription="Selected Image" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="Prediction Result"
        android:textSize="18sp"
        android:textColor="#3E603E" />

    <Button
        android:id="@+id/camera_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/resultTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Open Camera"
        android:backgroundTint="#6BBF59"
        android:textColor="#FFFFFF"
        android:padding="12dp" />

    <Button
        android:id="@+id/gallery_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/camera_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Select from Gallery"
        android:backgroundTint="#6BBF59"
        android:textColor="#FFFFFF"
        android:padding="12dp" />

    <ImageView
        android:id="@+id/footerImage"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/footer"
        android:scaleType="fitXY"
        android:contentDescription="Footer Image" />


</RelativeLayout>
